def chance_to_1(n):
    return (2**n - 1,2**n)

def chance_to_pattern_of_ones(n):
    c1 = chance_to_1(n)
    c2 = chance_to_1(n - 1)
    a = c1[0]**32
    b = c1[1]**32
    c = c2[0]**32
    d = c2[1]**32
    c = d - c
    return (a*c) / (b*d)

print(chance_to_pattern_of_ones(1))
chance = 0
m = 43
for n in range(1,m + 1):
    chance += n*chance_to_pattern_of_ones(n)

print(chance)
print(round(chance*10**10) / 10**10)
print(10.4765970331)
